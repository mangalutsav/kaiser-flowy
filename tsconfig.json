{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "moduleResolution": "node",
    "types": [],
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules"]
}
